{
  "compilerOptions": {
    "checkJs": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.mjs"],
  "exclude": ["node_modules", "test", "../../../../node_modules"]
}

